{
  "name": "@gcm/usage",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "gen": "pnpm exec prisma generate",
    "b": "pnpm --filter prisma-ts-select build",
    "b&g": "pnpm b && pnpm gen;",
    "p:r": "pnpm exec prisma migrate reset --force",
    "test": "pnpm test:ts; node --test  --test-reporter=spec **/tests/**/*.{cts,mts,ts}",
    "test:w": "pnpm p:r &&  find ./tests -name '*.spec.ts' -exec node --import tsx --test --test-reporter spec --watch {} \\;",
    "test:coverage": "find ./tests -name '*.spec.ts' -exec node --loader tsx --test --experimental-test-coverage --test-reporter=lcov {} \\;",
    "test:criteria": "node --import tsx --test tests/criteria.spec.ts",
    "test:core": "node --test-reporter=spec --test **/tests/core/**/*.{cts,mts,ts}",
    "test:readme": "node --test-reporter=spec --test **/tests/readme/**/*.{cts,mts,ts}",
    "test:ts": "tsc --noEmit -p tsconfig.json",
    "test:tsw": "pnpm test:ts --watch"
  },
  "devDependencies": {
    "@prisma/client": "5.16.1",
    "@types/node": "~20.14.10",
    "exponential-backoff": "^3.1.1",
    "prisma": "5.16.1",
    "prisma-ts-select": "workspace:@gcm/prisma-ts-select@*",
    "tsx": "^4.16.2",
    "typescript": "^5.9.3"
  }
}
