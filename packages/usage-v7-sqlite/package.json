{
  "name": "@gcm/usage-v7-sqlite",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "gen": "prisma generate",
    "test": "pnpm test:ts && CLIENT_PACKAGE=usage-v7-sqlite node --import ../../shared-tests/client-resolver.mjs --import ../../shared-tests/test-setup.mjs --test './tests/core/**/*.spec.ts' 'tests/readme/**/*.ts' 'tests/dialect/sqlite/**/*.ts'",
    "test:ts": "tsc --noEmit",
    "test:core": "CLIENT_PACKAGE=usage-v7-sqlite node --import ../../shared-tests/client-resolver.mjs --import ../../shared-tests/test-setup.mjs --test './tests/core/**/*.spec.ts'",
    "test:readme": "CLIENT_PACKAGE=usage-v7-sqlite node --import ../../shared-tests/client-resolver.mjs --import ../../shared-tests/test-setup.mjs --test './tests/readme/**/*.ts'",
    "test:dialect": "CLIENT_PACKAGE=usage-v7-sqlite node --import ../../shared-tests/client-resolver.mjs --import ../../shared-tests/test-setup.mjs --test './tests/dialect/sqlite/**/*.ts'",
    "p:r": "prisma db push --force-reset && prisma db seed"
  },
  "imports": {
    "#client": "./src/client.ts",
    "#dialect": "./generated/prisma-ts-select/dialects/index.js"
  },
  "dependencies": {
    "@gcm/prisma-ts-select": "workspace:*"
  },
  "devDependencies": {
    "@prisma/adapter-better-sqlite3": "^7.4.0",
    "@prisma/client": "7.4.0",
    "@types/node": "^24.0.0",
    "prisma": "7.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0"
  }
}
